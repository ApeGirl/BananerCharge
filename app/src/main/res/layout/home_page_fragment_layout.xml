<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridView
        android:id="@+id/home_page_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/column_margin_edge"
        android:layout_marginRight="@dimen/column_margin_edge"
        android:horizontalSpacing="@dimen/column_horizonal_spacing"
        android:numColumns="2"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="@dimen/column_vertical_spacing">

    </GridView>
</LinearLayout>
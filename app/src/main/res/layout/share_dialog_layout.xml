<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:orientation="vertical"
    android:id="@+id/share_dialog">

    <ImageView
        android:id="@+id/share_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/share" />

    <TextView
        android:id="@+id/share_remind_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/share_arrow"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/background_share"
        android:gravity="center"
        android:text="aaaaaa"
        android:textColor="@color/goods_info_title_text_color"
        android:textSize="@dimen/goods_main_text_size" />

</RelativeLayout>
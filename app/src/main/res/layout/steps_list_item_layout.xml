<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/step_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/step_bg"
            android:gravity="center"
            android:textColor="@color/goods_info_title_text_color"
            android:textSize="@dimen/goods_sub_text_size" />

        <TextView
            android:id="@+id/step_text"
            style="@style/MainTextStlye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/goods_info_step_text_margin_size"
            android:text="aaaaa" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/step_line_width"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/step_line_margintop"
            android:layout_marginLeft="@dimen/step_line_marginleft"
            android:layout_marginTop="@dimen/step_line_margintop"
            android:background="@drawable/step_line_background" />

        <ImageView
            android:id="@+id/step_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/step_pic_margin" />
    </LinearLayout>
</LinearLayout>